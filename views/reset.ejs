<div class="container">

    <!-- Outer Row -->
    <div class="row justify-content-center">

      <div class="col-xl-10 col-lg-12 col-md-9">

        <div class="card o-hidden border-0 shadow-lg my-5">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
              <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
              <div class="col-lg-6">
                <div class="p-5">
                  <div class="text-center mb-5">
                    <h1 class="h4 text-gray-900 mb-4">Forgot Your Password?</h1>
                  </div>

                  <body>
                    <div class="container">
                      <div class="row">
                        <div class="col-xl-10 col-lg-12 col-md-9">
                          <div class="panel panel-default">
                            <div class="panel-body">
                              <div class="text-center">
                                <h5 class="text-center mt-5 mb-4">Reset Here:</h5>
                                <div sclass="panel-body">
                                  <form method="POST" action="/forgot/<%= secrete %>" class="user">
                                    <fieldset>
                                      <div class="form-group">
                                        <div class="input-group">
                                          <input id="password" onkeyup="check()" placeholder="password" name="password"
                                            class="form-control form-control-user border border-secondary"
                                            type="password">
                                          <input id="confirm_password" onkeyup="check()" placeholder="confirm password"
                                            name="confirm_password"
                                            class="form-control form-control-user border border-secondary"
                                            type="password">
                                          <!-- >oninvalid="setCustomValidity('Please enter a valid email address!')"
                                            onchange="try{setCustomValidity('')}catch(e){}" required="" -->

                                        </div>
                                        <span id="message"></span>
                                      </div>
                                      <div class="form-group">
                                        <input class="btn btn-primary btn-user btn-block" value="Send My Password"
                                          type="submit">
                                      </div>
                                    </fieldset>
                                  </form>

                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>

                    </div>